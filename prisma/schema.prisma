model User {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  password   String
  first_name String?
  last_name  String?
  addresses  Address[] // One-to-many relationship with Address
  orders     Order[]   // One-to-many relationship with Order
}

model Address {
  id          Int      @id @default(autoincrement())
  user        User     @relation(fields: [user_id], references: [id])
  user_id     Int
  street      String
  city        String
  state       String
  country     String
  postal_code String
}

model Order {
  id          Int       @id @default(autoincrement())
  user        User      @relation(fields: [user_id], references: [id])
  user_id     Int
  product     String
  quantity    Int
  order_date  DateTime  @default(now())
}
