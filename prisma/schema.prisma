model User {
  id         Int       @id @default(autoincrement())
  email      String    @unique
  password   String
  firstName  String
  lastName   String
  address    Address?
  orders     Order[]
}

model Address {
  id          Int      @id @default(autoincrement())
  street      String
  city        String
  postalCode  String
  user        User     @relation(fields: [userId], references: [id])
  userId      Int      @unique
}

model Plant {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  price       Float
  image       String
  inventory   Int
  orders      Order[]
}

model Order {
  id          Int      @id @default(autoincrement())
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
  plants      Plant[]
  totalPrice  Float
  createdAt   DateTime @default(now())
}
